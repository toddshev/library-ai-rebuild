extends ../layout

block content
  h1 Edit Loan
  form(method='post', action='/loans/' + loan.id, novalidate)
    input(type='hidden', name='_method', value='PUT')
    if errors && errors.length
      h2.error Oooops!
      ul.error
        each msg in errors
          li= msg
    p
      strong Book:
      |  #{loan.Book ? loan.Book.title : ''}
    p
      strong Patron:
      |  #{loan.Patron ? (loan.Patron.first_name + ' ' + loan.Patron.last_name) : ''}
    p
      label(for='loaned_on') Loaned on
      input#loaned_on(name='loaned_on', type='date', value=loan.loaned_on || '')
    p
      label(for='return_by') Return by
      input#return_by(name='return_by', type='date', value=loan.return_by || '')
    p
      label(for='returned_on') Returned on
      input#returned_on(name='returned_on', type='date', value=loan.returned_on || '')
    p
      input(type='submit', value='Update')
